          },
          {
            "type": "filter",
            "expr": "datum.start_pos && datum.end_pos"
          }
        ]
      },
      {
        "name": "links_health",
        "values": [
          { "start": "fw1", "end": "sw1", "status": "OK" },
          { "start": "sw1", "end": "bluecoat_sg1", "status": "OK" },
          { "start": "sw1", "end": "bluecoat_cas", "status": "OK" },
          { "start": "sw1", "end": "olfeo", "status": "OK" },
          { "start": "sw1", "end": "fw2", "status": "OK" },
          { "start": "fw2", "end": "sw2", "status": "OK" },
          { "start": "sw2", "end": "fw3", "status": "KO" },
          { "start": "sw2", "end": "squid1", "status": "OK" }
        ],
        "transform": [
          {
            "type": "lookup",
            "from": "image_positions",
            "key": "name",
            "fields": ["start", "end"],
            "as": ["start_pos", "end_pos"]
          },
          {
            "type": "filter",
            "expr": "datum.start_pos && datum.end_pos"
          },
          {
            "type": "formula",
            "as": "color",
            "expr": "datum.status === 'OK' ? 'green' : 'red'"
          }
        ]
      },
      {
        "name": "zones",
        "source": "image_positions",
        "transform": [
          {"type": "filter", "expr": "datum.zone"},
          {
            "type": "aggregate",
            "groupby": ["zone"],
            "fields": ["x", "x", "y", "y"],
            "ops": ["min", "max", "min", "max"],
            "as": ["min_x", "max_x", "min_y", "max_y"]
          },
          {
            "type": "formula",
            "as": "min_x",
            "expr": "datum.min_x - zone_padding_x"
          },
          {
            "type": "formula",
            "as": "max_x",
            "expr": "datum.max_x + zone_padding_x"
          },
          {
            "type": "formula",
            "as": "min_y",
            "expr": "datum.min_y - zone_padding_y"
          },
          {
            "type": "formula",
            "as": "max_y",
            "expr": "datum.max_y + zone_padding_y"
          }
        ]
      },
      {
        "name": "health",
        "url": {
          "%context%": true,
          "%timefield%": "@timestamp",
          "index": "healthcheck-device",
          "body": {
            "size": 30
          }
        },
        "format": {"property": "hits.hits"},
        "transform": [
          {
            "type": "formula",
            "as": "hostname",
            "expr": "datum._source.host.name"
          },
          {
            "type": "lookup",
            "from": "image_positions",
            "key": "hostname",
            "fields": ["hostname"],
            "as": ["device"]
          },
          {
            "type": "filter",
            "expr": "datum.device"
          }
        ]
      },
      {
        "name": "cpu",
        "source": "health",
        "transform": [
          {
            "type": "formula",
            "as": "tooltip",
            "expr": "'cpu : ' + format(datum._source.system.cpu.total.norm.pct.avg * 100, '.0f') + '%'"
          },
          {
            "type": "formula",
            "as": "square_x",
            "expr": "datum.device.x - health_rect_left_margin"
          },
          {
            "type": "formula",
            "as": "square_x2",
            "expr": "datum.device.x - health_rect_left_margin + health_rect_width"
          },
          {
            "type": "formula",
            "as": "square_y",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_padding"
          },
          {
            "type": "formula",
            "as": "square_y2",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_height - health_rect_padding"
          }
        ]
      },
      {
        "name": "memory",
        "source": "health",
        "transform": [
          {
            "type": "formula",
            "as": "tooltip",
            "expr": "'memory : ' + format(datum._source.system.memory.actual.used.pct.avg * 100, '.0f') + '%'"
          },
          {
            "type": "formula",
            "as": "square_x",
            "expr": "datum.device.x - health_rect_left_margin + (health_rect_width + health_rect_padding)"
          },
          {
            "type": "formula",
            "as": "square_x2",
            "expr": "datum.device.x - health_rect_left_margin + health_rect_width + health_rect_padding + health_rect_width"
          },
          {
            "type": "formula",
            "as": "square_y",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_padding"
          },
          {
            "type": "formula",
            "as": "square_y2",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_height - health_rect_padding"
          }
        ]
      },
      {
        "name": "storage",
        "source": "health",
        "transform": [
          {
            "type": "formula",
            "as": "tooltip",
            "expr": "'disque et partitions'"
          },
          {
            "type": "formula",
            "as": "square_x",
            "expr": "datum.device.x - health_rect_left_margin + (health_rect_width + health_rect_padding) * 2"
          },
          {
            "type": "formula",
            "as": "square_x2",
            "expr": "datum.device.x - health_rect_left_margin + (health_rect_width + health_rect_padding) * 2 + health_rect_width"
          },
          {
            "type": "formula",
            "as": "square_y",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_padding"
          },
          {
            "type": "formula",
            "as": "square_y2",
            "expr": "datum.device.y - health_rect_top_margin - health_rect_height - health_rect_padding"
          }
        ]
      }
    ],
    "scales": [
      {"name": "xscale", "type": "linear", "domain": [0, 100], "range": "width"},
      {"name": "yscale", "type": "linear", "domain": [0, 100], "range": "height"}
    ],
    "marks": [
      {
        "type": "rule",
        "from": {"data": "gridlines"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "value": 100},
            "x2": {"scale": "xscale", "value": 0},
            "y": {"scale": "yscale", "field": "value"},
            "y2": {"scale": "yscale", "field": "value"},
            "stroke": {"value": "#ccc"},
            "opacity": {"signal": "grid_opacity"}
          }
        }
      },
      {
        "type": "rule",
        "from": {"data": "gridlines"},
        "encode": {
          "enter": {
            "y": {"scale": "yscale", "value": 100},
            "y2": {"scale": "yscale", "value": 0},
            "x": {"scale": "xscale", "field": "value"},
            "x2": {"scale": "xscale", "field": "value"},
            "stroke": {"value": "#ccc"},
            "opacity": {"signal": "grid_opacity"}
          }
        }
      },
      {
        "type": "rect",
        "from": {"data": "zones"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "min_x"},
            "y": {"scale": "yscale", "field": "min_y"},
            "x2": {"scale": "xscale", "field": "max_x"},
            "y2": {"scale": "yscale", "field": "max_y"},
            "fill": {"value": "#e0f7fa"},
            "fillOpacity": {"value": 0.3},
            "stroke": {"value": "#D3D3D3"},
            "cornerRadius": {"value": 20},
            "strokeWidth": {"value": 1}
          }
        }
      },
      {
        "type": "text",
        "from": {"data": "zones"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "signal": "(datum.min_x + datum.max_x) / 2"},
            "y": {"scale": "yscale", "signal": "datum.max_y + zone_name_margin"},
            "text": {"field": "zone"},
            "align": {"value": "center"},
            "baseline": {"value": "bottom"},
            "fontSize": {"value": 22},
            "fill": {"value": "black"}
          }
        }
      },
      {
        "type": "rule",
        "from": {"data": "links"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "start_pos.x"},
            "y": {"scale": "yscale", "field": "start_pos.y"},
            "x2": {"scale": "xscale", "field": "end_pos.x"},
            "y2": {"scale": "yscale", "field": "end_pos.y"},
            "stroke": {"value": "black"},
            "strokeDash": {"value": [4, 4]},
            "strokeWidth": {"value": 2},
            "opacity": {"value": 0.2}
          }
        }
      },
      {
        "type": "rule",
        "from": {"data": "links_health"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "start_pos.x"},
            "y": {"scale": "yscale", "field": "start_pos.y"},
            "x2": {"scale": "xscale", "field": "end_pos.x"},
            "y2": {"scale": "yscale", "field": "end_pos.y"},
            "stroke": {"field": "color"},
            "strokeDash": {"value": [4, 4]},
            "strokeWidth": {"value": 2},
            "opacity": {"value": 0.4}
          }
        }
      },
      {
        "type": "image",
        "from": {"data": "image_positions"},
        "encode": {
          "enter": {
            "url": {"field": "image.url"},
            "x": {"scale": "xscale", "field": "x"},
            "y": {"scale": "yscale", "field": "y"},
            "opacity": {"value": 1},
            "width": {"field": "size"},
            "height": {"field": "size"},
            "align": {"value": "center"},
            "baseline": {"value": "middle"},
            "href": {"field": "url"},
            "cursor": {"signal": "datum.url ? 'pointer' : 'arrow'"}
          }
        }
      },
      {
        "type": "text",
        "from": {"data": "image_positions"},
        "encode": {
          "enter": {
            "text": {"field": "label"},
            "x": {"scale": "xscale", "field": "x"},
            "y": {"scale": "yscale", "field": "label_y"},
            "opacity": {"value": 0.7},
            "width": {"signal": "image_size"},
            "height": {"signal": "image_size"},
            "align": {"value": "center"}
          }
        }
      },
      {
        "type": "rect",
        "from": {"data": "cpu"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "square_x"},
            "y": {"scale": "yscale", "field": "square_y"},
            "x2": {"scale": "xscale", "field": "square_x2"},
            "y2": {"scale": "yscale", "field": "square_y2"},
            "fill": {"field": "_source.healthcheck.cpu.status"},
            "tooltip": {"field": "tooltip"}
          }
        }
      },
      {
        "type": "rect",
        "from": {"data": "memory"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "square_x"},
            "y": {"scale": "yscale", "field": "square_y"},
            "x2": {"scale": "xscale", "field": "square_x2"},
            "y2": {"scale": "yscale", "field": "square_y2"},
            "fill": {"field": "_source.healthcheck.memory.status"},
            "tooltip": {"field": "tooltip"}
          }
        }
      },
      {
        "type": "rect",
        "from": {"data": "storage"},
        "encode": {
          "enter": {
            "x": {"scale": "xscale", "field": "square_x"},
            "y": {"scale": "yscale", "field": "square_y"},
            "x2": {"scale": "xscale", "field": "square_x2"},
            "y2": {"scale": "yscale", "field": "square_y2"},
