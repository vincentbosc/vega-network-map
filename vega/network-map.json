          "hostname": "casb_cz_3.vega.network.map",
          "label": "CASB 3",
          "zone": "Central Zone",
          "url": "http://www.google.com"
        },
        {
          "x": 50,
          "y": 60,
          "type": "server",
          "name": "server_cz_D",
          "label": "Server D",
          "hostname": "server_cz_D.vega.network.map",
          "zone": "Central Zone",
          "url": "http://www.google.com"
        },
        {
          "x": 70,
          "y": 80,
          "type": "firewall",
          "name": "firewall_dmz_1",
          "label": "DMZ-IN",
          "hostname": "firewall_dmz_1.vega.network.map",
          "zone": "DMZ",
          "url": "https://en.wikipedia.org/wiki/Firewall_(computing)"
        },
        {
          "x": 80,
          "y": 80,
          "type": "switch",
          "name": "switch_dmz",
          "label": "Switch DMZ",
          "hostname": "switch_dmz.vega.network.map",
          "size": "L",
          "zone": "DMZ",
          "url": "http://www.google.com"
        },
        {
          "x": 90,
          "y": 80,
          "type": "firewall",
          "name": "firewall_dmz_2",
          "label": "DMZ-OUT",
          "hostname": "firewall_dmz_2.vega.network.map",
          "zone": "DMZ",
          "url": "https://en.wikipedia.org/wiki/Firewall_(computing)"
        },
        {
          "x": 70,
          "y": 50,
          "type": "server",
          "name": "antivirus",
          "hostname": "antivirus.vega.network.map",
          "label": "Antivirus",
          "zone": "DMZ",
          "url": "http://www.google.com"
        }
      ],
      "transform": [
        {
          "type": "formula",
          "as": "label_y",
          "expr": "datum.y + device_text_margin_top"
        },
        {
          "type": "lookup",
          "from": "image_type",
          "key": "type",
          "fields": ["type"],
          "as": ["image"]
        },
        {
          "type": "formula",
          "as": "size",
          "expr": "datum.size == 'L' ? device_image_size_L : device_image_size"
        }
      ]
    },
    {
      "name": "links",
      "values": [
        {"start": "user", "end": "firewall_cz_1"},
        {"start": "firewall_cz_1", "end": "switch_cz"},
        {"start": "switch_cz", "end": "server_cz_A"},
        {"start": "switch_cz", "end": "server_cz_B"},
        {"start": "switch_cz", "end": "server_cz_C"},
        {"start": "switch_cz", "end": "casb_cz_1"},
        {"start": "switch_cz", "end": "casb_cz_2"},
        {"start": "switch_cz", "end": "casb_cz_3"},
        {"start": "switch_cz", "end": "server_cz_D"},
        {"start": "switch_cz", "end": "firewall_dmz_1"},
        {"start": "firewall_dmz_1", "end": "switch_dmz"},
        {"start": "switch_dmz", "end": "firewall_dmz_2"},
        {"start": "switch_dmz", "end": "antivirus"}
      ],
      "transform": [
        {
          "type": "lookup",
          "from": "devices",
          "key": "name",
          "fields": ["start", "end"],
          "as": ["start_pos", "end_pos"]
        },
        {"type": "filter", "expr": "datum.start_pos && datum.end_pos"}
      ]
    },
    {
      "name": "network",
      "url": {
        "index": "healthcheck-network-test",
        "body": {
          "size": 50
        }
      },
      "format": {"property": "hits.hits"},
      "transform": [
        {
          "type": "formula",
          "as": "from",
          "expr": "datum._source.from"
        },
        {
          "type": "formula",
          "as": "to",
          "expr": "datum._source.to"
        },
        {
          "type": "lookup",
          "from": "devices",
          "key": "name",
          "fields": ["from", "to"],
          "as": ["start_pos", "end_pos"]
        },
        {
          "type": "filter",
          "expr": "datum.start_pos && datum.end_pos"
        },
        {
          "type": "formula",
          "as": "x_from",
          "expr": "datum.start_pos.x"
        },
        {
          "type": "formula",
          "as": "y_from",
          "expr": "datum.start_pos.y"
        },
        {
          "type": "formula",
          "as": "x_to",
          "expr": "(datum.start_pos.x + datum.end_pos.x)/2"
        },
        {
          "type": "formula",
          "as": "y_to",
          "expr": "(datum.start_pos.y + datum.end_pos.y)/2"
        },
        {
          "type": "formula",
          "as": "tooltip",
          "expr": "datum._source.bits_per_second_label"
        },
        {
          "type": "formula",
          "as": "bps",
          "expr": "datum._source.bits_per_second"
        }
      ]
    },
    {
      "name": "zones",
      "source": "devices",
      "transform": [
        {"type": "filter", "expr": "datum.zone"},
        {
          "type": "aggregate",
          "groupby": ["zone"],
          "fields": ["x", "x", "y", "y"],
          "ops": ["min", "max", "min", "max"],
          "as": ["min_x", "max_x", "min_y", "max_y"]
        },
        {
          "type": "formula",
          "as": "min_x",
          "expr": "datum.min_x - zone_padding_x"
        },
        {
          "type": "formula",
          "as": "max_x",
          "expr": "datum.max_x + zone_padding_x"
        },
        {
          "type": "formula",
          "as": "min_y",
          "expr": "datum.min_y - zone_padding_y"
        },
        {
          "type": "formula",
          "as": "max_y",
          "expr": "datum.max_y + zone_padding_y"
        }
      ]
    },
    {
      "name": "health",
      "url": {
        "%context%": true,
        "%timefield%": "@timestamp",
        "index": "healthcheck-device-test",
        "body": {"size": 30}
      },
      "format": {"property": "hits.hits"},
      "transform": [
        {
          "type": "formula",
          "as": "hostname",
          "expr": "datum._source.host.name"
        },
        {
          "type": "lookup",
          "from": "devices",
          "key": "hostname",
          "fields": ["hostname"],
          "as": ["device"]
        },
        {"type": "filter", "expr": "datum.device"}
      ]
    },
    {
      "name": "cpu",
      "source": "health",
      "transform": [
        {
          "type": "filter",
          "expr": "datum._source.healthcheck != null && datum._source.healthcheck.cpu != null"
        },
        {
          "type": "formula",
          "as": "tooltip",
          "expr": "'cpu : ' + format(datum._source.healthcheck.cpu.value * 100, '.0f') + '%'"
        },
        {
          "type": "formula",
          "as": "square_x",
          "expr": "datum.device.x - health_rect_left_margin"
        },
        {
          "type": "formula",
          "as": "square_x2",
          "expr": "datum.device.x - health_rect_left_margin + health_rect_width"
        },
        {
          "type": "formula",
          "as": "square_y",
          "expr": "datum.device.y - health_rect_top_margin - health_rect_padding"
        },
        {
          "type": "formula",
          "as": "square_y2",
          "expr": "datum.device.y - health_rect_top_margin - health_rect_height - health_rect_padding"
        }
      ]
    },
    {
      "name": "memory",
      "source": "health",
      "transform": [
        {
          "type": "filter",
          "expr": "datum._source.healthcheck != null && datum._source.healthcheck.memory != null"
        },
        {
          "type": "formula",
          "as": "tooltip",
          "expr": "'memory : ' + format(datum._source.healthcheck.memory.value * 100, '.0f') + '%'"
        },
        {
          "type": "formula",
          "as": "square_x",
          "expr": "datum.device.x - health_rect_left_margin + (health_rect_width + health_rect_padding)"
        },
        {
          "type": "formula",
          "as": "square_x2",
          "expr": "datum.device.x - health_rect_left_margin + health_rect_width + health_rect_padding + health_rect_width"
        },
        {
          "type": "formula",
          "as": "square_y",
          "expr": "datum.device.y - health_rect_top_margin - health_rect_padding"
        },
        {
          "type": "formula",
          "as": "square_y2",
          "expr": "datum.device.y - health_rect_top_margin - health_rect_height - health_rect_padding"
        }
      ]
    }
  ],
  "scales": [
    {"name": "xscale", "type": "linear", "domain": [0, 100], "range": "width"},
    {"name": "yscale", "type": "linear", "domain": [0, 100], "range": "height"},
    {"name": "network_scale", "type": "log", "domain": [1, 20000000], "range": [0,10], "base": 10},
    {"name": "network_color_scale", "type": "log", "domain": [1, 20000000], "range": {"scheme": "turbo"}, "base": 10}
  ],
  "legends": [
    {
      "fill": "network_color_scale",
      "title": "Throughput (bps)",
      "orient": "right"
    }
  ],
  "marks": [
    {
      "type": "rule",
      "from": {"data": "gridlines"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "value": 100},
          "x2": {"scale": "xscale", "value": 0},
          "y": {"scale": "yscale", "field": "value"},
          "y2": {"scale": "yscale", "field": "value"},
          "stroke": {"value": "#ccc"},
          "opacity": {"signal": "grid_opacity"}
        }
      }
    },
    {
      "type": "rule",
      "from": {"data": "gridlines"},
      "encode": {
        "enter": {
          "y": {"scale": "yscale", "value": 100},
          "y2": {"scale": "yscale", "value": 0},
          "x": {"scale": "xscale", "field": "value"},
          "x2": {"scale": "xscale", "field": "value"},
          "stroke": {"value": "#ccc"},
          "opacity": {"signal": "grid_opacity"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "zones"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "min_x"},
          "y": {"scale": "yscale", "field": "min_y"},
          "x2": {"scale": "xscale", "field": "max_x"},
          "y2": {"scale": "yscale", "field": "max_y"},
          "fill": {"value": "#e0f7fa"},
          "fillOpacity": {"value": 0.3},
          "stroke": {"value": "#D3D3D3"},
          "cornerRadius": {"value": 20},
          "strokeWidth": {"value": 1}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "zones"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "signal": "(datum.min_x + datum.max_x) / 2"},
          "y": {"scale": "yscale", "signal": "datum.max_y + zone_name_margin"},
          "text": {"field": "zone"},
          "align": {"value": "center"},
          "baseline": {"value": "bottom"},
          "fontSize": {"value": 22},
          "fill": {"value": "black"}
        }
      }
    },
    {
      "type": "rule",
      "from": {"data": "network"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "x_from"},
          "y": {"scale": "yscale", "field": "y_from"},
          "x2": {"scale": "xscale", "field": "x_to"},
          "y2": {"scale": "yscale", "field": "y_to"},
          "stroke": {"scale": "network_color_scale", "field": "bps"},
          "strokeDash": {"value": [4, 4]},
          "strokeWidth": {"scale": "network_scale", "field": "bps"},
          "tooltip": {"field": "tooltip"},
          "opacity": {"value": 0.4}
        }
      }
    },
    {
      "type": "image",
      "from": {"data": "devices"},
      "encode": {
        "enter": {
          "url": {"field": "image.url"},
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "y"},
          "opacity": {"value": 1},
          "width": {"field": "size"},
          "height": {"field": "size"},
          "align": {"value": "center"},
          "baseline": {"value": "middle"},
          "href": {"field": "url"},
          "tooltip": {"field": "hostname"},
          "cursor": {"signal": "datum.url ? 'pointer' : 'arrow'"}
        }
      }
    },
    {
      "type": "text",
      "from": {"data": "devices"},
      "encode": {
        "enter": {
          "text": {"field": "label"},
          "x": {"scale": "xscale", "field": "x"},
          "y": {"scale": "yscale", "field": "label_y"},
          "opacity": {"value": 0.7},
          "width": {"signal": "device_image_size"},
          "height": {"signal": "device_image_size"},
          "align": {"value": "center"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "cpu"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "square_x"},
          "y": {"scale": "yscale", "field": "square_y"},
          "x2": {"scale": "xscale", "field": "square_x2"},
          "y2": {"scale": "yscale", "field": "square_y2"},
          "fill": {"field": "_source.healthcheck.cpu.status"},
          "tooltip": {"field": "tooltip"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "memory"},
      "encode": {
        "enter": {
          "x": {"scale": "xscale", "field": "square_x"},
          "y": {"scale": "yscale", "field": "square_y"},
          "x2": {"scale": "xscale", "field": "square_x2"},
          "y2": {"scale": "yscale", "field": "square_y2"},
          "fill": {"field": "_source.healthcheck.memory.status"},
          "tooltip": {"field": "tooltip"}
        }
      }
    }
  ]
}