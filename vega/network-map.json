        },
        {
          "x": 30,
          "y": 60,
          "type": "server",
          "name": "server_cz_C",
          "hostname": "server_cz_C.vega.network.map",
          "label": "Server C",
          "zone": "Central Zone",
          "url": "http://www.google.com"
        },
        {
          "x": 35,
