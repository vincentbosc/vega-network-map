    {"name": "health_rect_width", "value": 1},
    {"name": "health_rect_height", "value": 1.5},
    {"name": "health_rect_padding", "value": 0.2},
    {"name": "health_rect_left_margin", "value": 2},
    {"name": "health_rect_top_margin", "value": 4}
